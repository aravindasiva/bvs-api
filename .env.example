NODE_ENV=development
PORT=3000

# Neon Postgres connection string (ensure sslmode=require)
# Format:
# postgresql://USER:PASS@HOST/DB?sslmode=require
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/bvs_api?schema=public"

# JWT
# Generate a strong HS256 secret with at least 256 bits (32 bytes) of entropy.
# Recommended:
#   - openssl: openssl rand -hex 64
#   - node:    node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET="paste-hex-secret-here"

# Token TTL examples: "15m", "1h", "1d", "7d"
ACCESS_TOKEN_TTL="1d"

# CORS (tighten later)
CORS_ORIGIN=*

# Observability (optional locally)
SENTRY_DSN=
