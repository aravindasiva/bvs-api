generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid()) @db.Uuid
  email        String   @unique
  firstName    String?
  lastName     String?
  avatarUrl    String?
  passwordHash String // REQUIRED for local auth
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
